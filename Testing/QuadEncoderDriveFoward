#pragma config(Sensor, dgtl1,  rightEncoder,   sensorQuadEncoder)
#pragma config(Sensor, dgtl3,  leftEncoder,    sensorQuadEncoder)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

void ClearShaftEncoder(int portIndex)
	{
		SensorValue[portIndex] = 0;

		writeDebugStream("Shaft Encode Cleared");
	}
	
task main
{
	
	ClearShaftEncoder(rightEncoder);
	ClearShaftEncoder(leftEncoder);

	int desiredRotations = 360;
	
	while(SensorValue[rightEncoder] > desiredRotations) 
	{
	if(SensorValue[leftEncoder] < SensorValue[rightEncoder])
	{ //If the left side has reversed more than the right...
	 motor[rightd] = 50; //slow down the left...
	 motor[leftd] = 63; //and speed up the right
	}
	if(SensorValue[leftEncoder] > SensorValue[rightEncoder])
	{ //If the right side has reversed more than the left...
	 motor[rightd] = 63; //speed up the left...
	 motor[leftd] = 50; //and slow down the right...
	}
	if(SensorValue[leftEncoder] == SensorValue[rightEncoder])
	{ //If the left and right have reversed the same amount...
	 motor[rightd] = 63; //run the motors at the same speed
	 motor[leftd] = 63;
	}
	}
}
